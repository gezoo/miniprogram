/* components/common.wxss */
.item {
  height: 100%;
  width: 100%;
  /* margin-bottom: 10px; */
  background: #fff;
  font-size: 35rpx;
  padding-top:1px;
}

.member {
  display: flex;
}

.member {
  font-size: 28rpx;
}

.member-avatar {
  width: 72rpx;
  height: 72rpx;
  margin-right: 10px;
  border-radius: 10rpx;
}

.member-last_reply_by {
  font-size: 24rpx;
  color: #c2bfbf;
  padding: 2px 0;
}

.node {
  display: flex;
  justify-content: space-between;
}

.member, .content, .node {
  margin:10rpx 20rpx;
}

.content{
  font-size: 30rpx;
}

.node-title{
  font-size: 24rpx;

  background: #f0f2f4;
  border-radius: 8rpx;
  padding: 2px 5px;
  color:#747474;
}

.replies{
  color:#747474;
  font-size: 24rpx;
  display: flex;
}

.item-hover{
  background: #e9e9e9;
}

.replies-image{
  width: 16px;
  height: 16px;
  margin-right: 3px;
}