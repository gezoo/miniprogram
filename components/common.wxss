/* components/common.wxss */

.item {
  height: 100%;
  background: #fff;
  font-size: 35rpx;
  padding: 25rpx;
}

.member {
  display: flex;
}

.member {
  font-size: 28rpx;
}

.member-avatar {
  width: 72rpx;
  height: 72rpx;
  margin-right: 15rpx;
  border-radius: 10rpx;
}

.member-username {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.member-name {
}

.member-last_reply_by {
  margin-top: 1px;
  font-size: 24rpx;
  color: #c2bfbf;
}

.node {
  display: flex;
  justify-content: space-between;
}

.content {
  font-size: 30rpx;
  padding: 8px 0;
}

.node-title {
  font-size: 23rpx;
  background: #f0f2f4;
  border-radius: 8rpx;
  padding: 2px 5px;
  color: #747474;
}

.replies {
  color: #747474;
  display: flex;
  align-self: flex-end
}

.replies view {
  font-size: 24rpx;
}

.replies-image {
  width: 16px;
  height: 16px;
  margin-right: 8rpx;
}

.item-hover {
  background: #e9e9e9;
}